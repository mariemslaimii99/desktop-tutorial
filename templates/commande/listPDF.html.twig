
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="consultation__form">
                    <div class="section-title">
                        <h2>Mes Commandes</h2>
                        <table class="table table-striped table-hover" id="customers">
                            <thead>
                            <tr>
                                <th> Produit</th>
                                <th> Prix </th>
                                <th> Quantite </th>
                                <th> Total </th>

                            </tr>
                            </thead>
                            <tbody>
                            {% for commande in commande %}
                                {% for produit in produits %}
                                    {% if commande.produit==produit %}
                                        <tr>

                                        <td>{{ produit.nom }} </td>
                                        <td>{{ produit.prix }} €</td>
                                        <td>
                                            {{ commande.quantite }}
                                        </td>

                                        <td>{{produit.prix * commande.quantite  }} €</td>

                                        {% endif %}

                                    </tr>
                                {% endfor %}
                            {% endfor %}
                            </tbody>


                        </table>
                        <table class="table table-striped table-hover" id="customers">
                        <dl class="dl-horizontal pull-right">
                            {% set total = 0 %}
                            {% for commande in commande %}
                                {% for produit in produits %}
                                    {% if commande.produit==produit %}
                                        {% set total = total + ( produit.prix * commande.quantite ) %}
                                    {% endif %}
                                {% endfor%}
                            {% endfor %}
                            <dt>Total HT :</dt><dd>{{ total }} €</dd>
                        </dl>
                        </table>



                    </div>
            </div>

        </div>
    </div>
    </div>
    <style>
        ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
            overflow: hidden;
            background-color: #333;
        }

        li {
            float: left;
        }

        li a {
            display: block;
            color: white;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
        }

        li a:hover:not(.active) {
            background-color: #111;
        }

        .active {
            background-color: #4c81af;
        }
        #customers {
            font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        #customers td, #customers th {
            border: 1px solid #ddd;
            padding: 8px;
        }

        #customers tr:nth-child(even){background-color: #f2f2f2;}

        #customers tr:hover {background-color: #ba01fd;}

        #customers th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
            background-color: #4c9baf;
            color: #ffffff;
        }

    </style>
